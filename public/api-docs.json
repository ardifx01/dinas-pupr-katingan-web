{
  "openapi": "3.0.0",
  "info": {
    "title": "Dinas PUPR API Documentation",
    "version": "1.0.0",
    "description": "Dokumentasi API untuk sistem informasi Dinas Pekerjaan Umum dan Penataan Ruang",
    "contact": {
      "name": "Tim IT Dinas PUPR",
      "email": "it@dinaspupr.go.id"
    }
  },
  "servers": [
    {
      "url": "http://127.0.0.1:8000/api",
      "description": "Server Development"
    }
  ],
  "paths": {
    "/info": {
      "get": {
        "summary": "Informasi API",
        "description": "Mendapatkan informasi dasar tentang API",
        "tags": ["General"],
        "responses": {
          "200": {
            "description": "Informasi API berhasil diambil",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "API Dinas PUPR berjalan dengan baik"
                    },
                    "version": {
                      "type": "string",
                      "example": "1.0.0"
                    },
                    "timestamp": {
                      "type": "string",
                      "format": "date-time"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/berita": {
      "get": {
        "summary": "Daftar Berita",
        "description": "Mendapatkan daftar berita terbaru",
        "tags": ["Berita"],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Halaman data",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Jumlah data per halaman",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/BeritaListResponse"
          }
        }
      }
    },
    "/berita/{id}": {
      "get": {
        "summary": "Detail Berita",
        "description": "Mendapatkan detail berita berdasarkan ID",
        "tags": ["Berita"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID berita",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/BeritaDetailResponse"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundResponse"
          }
        }
      }
    },
    "/pengaduan": {
      "post": {
        "summary": "Buat Pengaduan",
        "description": "Membuat pengaduan baru dari masyarakat",
        "tags": ["Pengaduan"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PengaduanRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "$ref": "#/components/responses/PengaduanCreateResponse"
          },
          "422": {
            "$ref": "#/components/responses/ValidationErrorResponse"
          }
        }
      }
    },
    "/pengaduan/{nomor_tiket}": {
      "get": {
        "summary": "Cek Status Pengaduan",
        "description": "Mengecek status pengaduan berdasarkan nomor tiket",
        "tags": ["Pengaduan"],
        "parameters": [
          {
            "name": "nomor_tiket",
            "in": "path",
            "description": "Nomor tiket pengaduan",
            "required": true,
            "schema": {
              "type": "string",
              "example": "TKT-20250909-001"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Status pengaduan berhasil diambil",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "Status pengaduan berhasil diambil"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "nomor_tiket": {
                          "type": "string",
                          "example": "TKT-20250909-001"
                        },
                        "judul": {
                          "type": "string",
                          "example": "Jalan Rusak"
                        },
                        "status": {
                          "type": "string",
                          "example": "pending"
                        },
                        "tanggal_pengaduan": {
                          "type": "string",
                          "format": "date"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFoundResponse"
          }
        }
      }
    },
    "/kontak": {
      "post": {
        "summary": "Kirim Pesan Kontak",
        "description": "Mengirim pesan melalui form kontak",
        "tags": ["Kontak"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/KontakRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/KontakResponse"
          },
          "422": {
            "$ref": "#/components/responses/ValidationErrorResponse"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PengaduanRequest": {
        "type": "object",
        "required": ["nama", "email", "subjek", "pesan", "kategori"],
        "properties": {
          "nama": {
            "type": "string",
            "example": "Budi Santoso"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "budi@example.com"
          },
          "no_hp": {
            "type": "string",
            "example": "08123456789"
          },
          "subjek": {
            "type": "string",
            "example": "Jalan Rusak di Desa ABC"
          },
          "pesan": {
            "type": "string",
            "example": "Jalan di depan rumah saya sudah rusak parah dan berlubang"
          },
          "kategori": {
            "type": "string",
            "example": "infrastruktur"
          },
          "foto": {
            "type": "string",
            "format": "binary",
            "description": "File foto bukti (opsional)"
          }
        }
      },
      "KontakRequest": {
        "type": "object",
        "required": ["nama", "email", "subjek", "pesan"],
        "properties": {
          "nama": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "john@example.com"
          },
          "no_hp": {
            "type": "string",
            "example": "08123456789"
          },
          "subjek": {
            "type": "string",
            "example": "Pertanyaan tentang layanan"
          },
          "pesan": {
            "type": "string",
            "example": "Saya ingin bertanya tentang..."
          }
        }
      }
    },
    "responses": {
      "BeritaListResponse": {
        "description": "Daftar berita berhasil diambil",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "success"
                },
                "data": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "judul": {
                        "type": "string"
                      },
                      "ringkasan": {
                        "type": "string"
                      },
                      "tanggal": {
                        "type": "string",
                        "format": "date"
                      },
                      "gambar": {
                        "type": "string"
                      }
                    }
                  }
                },
                "pagination": {
                  "type": "object",
                  "properties": {
                    "current_page": {
                      "type": "integer"
                    },
                    "total_pages": {
                      "type": "integer"
                    },
                    "per_page": {
                      "type": "integer"
                    },
                    "total": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "BeritaDetailResponse": {
        "description": "Detail berita berhasil diambil",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "success"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "judul": {
                      "type": "string"
                    },
                    "konten": {
                      "type": "string"
                    },
                    "tanggal": {
                      "type": "string",
                      "format": "date"
                    },
                    "gambar": {
                      "type": "string"
                    },
                    "penulis": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "PengaduanCreateResponse": {
        "description": "Pengaduan berhasil dibuat",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "success"
                },
                "message": {
                  "type": "string",
                  "example": "Pengaduan berhasil disubmit"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "nomor_tiket": {
                      "type": "string",
                      "example": "TKT-20250909-001"
                    },
                    "status": {
                      "type": "string",
                      "example": "pending"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "KontakResponse": {
        "description": "Pesan kontak berhasil dikirim",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "success"
                },
                "message": {
                  "type": "string",
                  "example": "Pesan berhasil dikirim"
                }
              }
            }
          }
        }
      },
      "NotFoundResponse": {
        "description": "Data tidak ditemukan",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "error"
                },
                "message": {
                  "type": "string",
                  "example": "Data tidak ditemukan"
                }
              }
            }
          }
        }
      },
      "ValidationErrorResponse": {
        "description": "Error validasi input",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "error"
                },
                "message": {
                  "type": "string",
                  "example": "Data tidak valid"
                },
                "errors": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  }
}
